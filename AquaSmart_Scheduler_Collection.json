						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Morning Drinking Water\",\n  \"filter_mode\": \"drinking_water\",\n  \"start_time\": \"06:00:00\",\n  \"duration_minutes\": 180,\n  \"days_of_week\": [\"monday\", \"tuesday\", \"wednesday\", \"thursday\", \"friday\", \"saturday\", \"sunday\"],\n  \"is_active\": true\n}"
						},
						"url": {
							"raw": "http://localhost:8080/api/v1/schedules",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
