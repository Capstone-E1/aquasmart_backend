# AquaSmart Backend Configuration

# Server Configuration
PORT=8080
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s

# MQTT Configuration
MQTT_BROKER_URL=tcp://localhost:1883
MQTT_CLIENT_ID=aquasmart_backend
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_KEEP_ALIVE=30s
MQTT_PING_TIMEOUT=10s
MQTT_CONNECT_RETRY=true

# Aiven PostgreSQL Database Configuration
DB_HOST=your-aiven-host.aivencloud.com
DB_PORT=your-port
DB_USER=your-username
DB_PASSWORD=your-password
DB_NAME=your-database-name
DB_SSLMODE=require

# Example Aiven connection:
# DB_HOST=aquasmart-project-aquasmart.h.aivencloud.com
# DB_PORT=25432
# DB_USER=avnadmin
# DB_PASSWORD=your-secure-password
# DB_NAME=defaultdb
# DB_SSLMODE=require